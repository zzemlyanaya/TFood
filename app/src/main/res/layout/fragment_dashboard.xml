                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/prots"
                        android:textColor="@color/primaryColour"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/progressProts"
                        app:layout_constraintStart_toStartOf="@+id/progressProts"
                        app:layout_constraintTop_toBottomOf="@+id/progressProts" />

