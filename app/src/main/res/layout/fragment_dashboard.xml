                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/fats"
                        android:textColor="@color/primaryColour"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/progressFats"
                        app:layout_constraintStart_toStartOf="@+id/progressFats"
                        app:layout_constraintTop_toTopOf="@+id/textView16" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/carbs"
                        android:textColor="@color/primaryColour"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@+id/progressCarbs"
                        app:layout_constraintStart_toStartOf="@+id/progressCarbs"
                        app:layout_constraintTop_toTopOf="@+id/textView16" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="14dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="14dp"
                        android:layout_marginBottom="24dp"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/progressFats"
                        app:layout_constraintEnd_toEndOf="@+id/progressFats"
                        app:layout_constraintStart_toStartOf="@+id/progressFats"
                        app:layout_constraintTop_toTopOf="@+id/progressFats">

                        <TextView
                            android:id="@+id/textFats"
