<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColour</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColour</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Others -->
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="DialogProgress" parent="AppTheme">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="BtnText" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="Btn" parent="Widget.MaterialComponents.Button">
<!--        <item name="android:insetTop">0dp</item>-->
<!--        <item name="android:insetBottom">0dp</item>-->
<!--        <item name="cornerRadius">15dp</item>-->
        <item name="background">@drawable/btn_rounded</item>
        <item name="android:textAppearance">@style/BtnText</item>
    </style>

</resources>