<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/nutrientsCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        app:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textKcalGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="2000"
                android:textColor="@color/primaryColour"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView9"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textKcalEaten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1000"
                android:textColor="@color/primaryColour"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView11"
                app:layout_constraintStart_toStartOf="@+id/textView11"
                app:layout_constraintTop_toTopOf="@+id/textKcalGoal" />

            <TextView
                android:id="@+id/textKcalBurnt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="500"
                android:textColor="@color/primaryColour"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toTopOf="@+id/textKcalEaten" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/goal"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textKcalGoal" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/eaten"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/textView13"
                app:layout_constraintHorizontal_bias="0.55"
                app:layout_constraintStart_toEndOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textKcalEaten" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="18dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/burnt"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textKcalBurnt2" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/kcal_left"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textKcalLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="1000"
                android:textColor="@color/primaryColour"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textView14"
                app:layout_constraintStart_toEndOf="@+id/textView14"
                app:layout_constraintTop_toTopOf="@+id/textView14" />

            <TextView
                android:id="@+id/textKcalLeft2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/kcal"
                android:textColor="@color/primaryColour"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@+id/textKcalLeft"
                app:layout_constraintStart_toEndOf="@+id/textKcalLeft"
                app:layout_constraintTop_toTopOf="@+id/textKcalLeft"
                app:layout_constraintVertical_bias="1.0" />

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/progressKcal"
                style="Widget.MaterialComponents.LinearProgressIndicator"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:indeterminate="false"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textKcalLeft"
                app:trackColor="@color/progressGrey"
                app:trackCornerRadius="8dp"
                app:trackThickness="10dp" />

            <ru.zzemlyanaya.tfood.uikit.circularprogressview.CPVProgressView
                android:id="@+id/progressProts"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginTop="24dp"
                app:CPV_animateChanges="true"
                app:CPV_animationDuration="2000"
                app:CPV_bgLineColor="@color/progressGrey"
                app:CPV_cap="0"
                app:CPV_direction="clockwise"
                app:CPV_gapWidth="0"
                app:CPV_strokeCap="round"
                app:CPV_strokeWidth="11dp"
                app:layout_constraintStart_toStartOf="@+id/progressKcal"
                app:layout_constraintTop_toBottomOf="@+id/progressKcal" />

            <ru.zzemlyanaya.tfood.uikit.circularprogressview.CPVProgressView
                android:id="@+id/progressCarbs"
                android:layout_width="102dp"
                android:layout_height="102dp"
                android:layout_marginEnd="16dp"
                app:CPV_animateChanges="true"
                app:CPV_animationDuration="2500"
                app:CPV_cap="0"
                app:CPV_direction="clockwise"
                app:CPV_gapWidth="0"
                app:CPV_strokeCap="round"
                app:CPV_strokeWidth="11dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/progressProts" />

            <ru.zzemlyanaya.tfood.uikit.circularprogressview.CPVProgressView
                android:id="@+id/progressFats"
                android:layout_width="102dp"
                android:layout_height="102dp"
                app:CPV_animateChanges="true"
                app:CPV_animationDuration="2500"
                app:CPV_cap="0"
                app:CPV_direction="clockwise"
                app:CPV_gapWidth="0"
                app:CPV_strokeCap="round"
                app:CPV_strokeWidth="11dp"
                app:layout_constraintEnd_toStartOf="@+id/progressCarbs"
                app:layout_constraintStart_toEndOf="@+id/progressProts"
                app:layout_constraintTop_toTopOf="@+id/progressProts" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/prots"
                android:textColor="@color/primaryColour"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/progressProts"
                app:layout_constraintStart_toStartOf="@+id/progressProts"
                app:layout_constraintTop_toBottomOf="@+id/progressProts" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/fats"
                android:textColor="@color/primaryColour"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/progressFats"
                app:layout_constraintStart_toStartOf="@+id/progressFats"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/carbs"
                android:textColor="@color/primaryColour"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/progressCarbs"
                app:layout_constraintStart_toStartOf="@+id/progressCarbs"
                app:layout_constraintTop_toTopOf="@+id/textView16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/progressFats"
                app:layout_constraintEnd_toEndOf="@+id/progressFats"
                app:layout_constraintStart_toStartOf="@+id/progressFats"
                app:layout_constraintTop_toTopOf="@+id/progressFats">

                <TextView
                    android:id="@+id/textFats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="0/35"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColour"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/gram"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/progressProts"
                app:layout_constraintEnd_toEndOf="@+id/progressProts"
                app:layout_constraintStart_toStartOf="@+id/progressProts"
                app:layout_constraintTop_toTopOf="@+id/progressProts">

                <TextView
                    android:id="@+id/textProts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="21/42"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColour"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/gram"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/progressCarbs"
                app:layout_constraintEnd_toEndOf="@+id/progressCarbs"
                app:layout_constraintStart_toStartOf="@+id/progressCarbs"
                app:layout_constraintTop_toTopOf="@+id/progressCarbs">

                <TextView
                    android:id="@+id/textCarbs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="0/46"
                    android:textAlignment="center"
                    android:textColor="@color/primaryColour"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:text="@string/gram"
                    android:textAlignment="center"
                    android:textSize="12sp" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>