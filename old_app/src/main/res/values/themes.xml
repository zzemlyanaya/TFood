<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TFood" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColour</item>
        <item name="colorOnPrimary">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColour</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="roundedImageViewOval" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="roundedProfileImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <style name="roundedArticleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">21dp</item>
    </style>
</resources>